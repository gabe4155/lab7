#include <stdio.h>

void bubbleSort(int arr[], int n, int *totalSwaps) {
    int i, j, temp;
    for (i = 0; i < n-1; i++) {
        int swaps = 0;
        for (j = 0; j < n-i-1; j++) {
            if (arr[j] > arr[j+1]) {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
                swaps++;
                (*totalSwaps)++;
            }
            
        }
        
        printf("Number %d swapped %d times.\n", arr[j], swaps);
    }
}

void selectionSort(int arr[], int n, int *totalSwaps) {
    int i, j, minIndex, temp;
    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }
        if (minIndex != i) {
            temp = arr[i];
            arr[i] = arr[minIndex];
            arr[minIndex] = temp;
            (*totalSwaps)++;
            printf("Number %d swapped.\n", arr[i]);
        }
    }
}





int main() { 
    int arr[] = {97, 16, 45, 63, 13, 22, 7, 58, 72};
    int arr2[] = {90, 80, 70, 60, 50, 40, 30, 20, 10};
    int n = sizeof(arr)/sizeof(arr[0]);
    int n2 = sizeof(arr2)/sizeof(arr2[0]);
    int n3 = sizeof(arr)/sizeof(arr[0]);
    int n4 = sizeof(arr2)/sizeof(arr2[0]);
    int totalSwaps = 0;
    int totalSwaps2 = 0;
    int totalSwaps3 = 0;
    int totalSwaps4 = 0;
    bubbleSort(arr, n, &totalSwaps);
    printf("Total number of swaps: %d\n", totalSwaps * 2);
    printf("Sorted array: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
    bubbleSort(arr2, n2, &totalSwaps2);
    printf("Total number of swaps: %d\n", totalSwaps2 * 2);
    printf("Sorted array: ");
    for (int i = 0; i < n2; i++)
        printf("%d ", arr2[i]);
    printf("\n");
    selectionSort(arr, n3, &totalSwaps3);
    printf("Total number of swaps: %d\n", totalSwaps3 * 2);
    printf("Sorted array: ");
    for (int i = 0; i < n3; i++)
        printf("%d ", arr[i]);
    printf("\n");
    selectionSort(arr2, n4, &totalSwaps4);
    printf("Total number of swaps: %d\n", totalSwaps4 * 2);
    printf("Sorted array: ");
    for (int i = 0; i < n2; i++)
        printf("%d ", arr2[i]);
    printf("\n");
    return 0;
}
